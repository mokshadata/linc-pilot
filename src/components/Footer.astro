---
import LincLogo from "./LincLogo.astro";
const { pathname } = Astro.url;

const base_url = `${import.meta.env.BASE_URL}/`;
---

<footer>
  <div class="container-fluid">
    <div class="grid">
      <div>
        <a href={`${base_url}`} aria-current={pathname === base_url}><LincLogo/></a>
      </div>
      <aside>
        <nav>
          <ul>
            <li>
              <a href={`${base_url}get-started/`} aria-current={pathname === `${base_url}get-started/`}>How Does It Work</a>
            </li>
            <li>
              <a href={`${base_url}about/`} aria-current={pathname === `${base_url}about/`}>About Fort Bend LINC</a>
            </li>
            <li>
              <a href={`${base_url}faqs/`} aria-current={pathname === `${base_url}faqs/`}>FAQs</a>
            </li>
          </ul>
        </nav>
      </aside>
    </div>
  </div>
</footer>


<style>
  aside {
    text-align: right;
    font-size: 0.75em;
  }

  ul {
    display: inline-block;
  }

  .grid {
    grid-template-columns: repeat(auto-fit,minmax(0%,1fr));
  }
</style>