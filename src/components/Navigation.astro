---
import NavigationItem from "./NavigationItem.astro";
import { getEntry } from "astro:content";

const base_url = import.meta.env.BASE_URL;
const { currentLocale } = Astro.props;

const navigationItems = await getEntry('menus', `${currentLocale}/navigation`)
---

<ul class="nav-links">
  {navigationItems?.data.items.map((item) => (
    <NavigationItem href={`${base_url}${item.path}`}>{item.item_name}</NavigationItem>
  ))}
</ul>

<style>
  .nav-links {
    /* display: flex; */
    display: none;
    /* flex-direction: column; */
    align-items: flex-end;
    justify-content: space-between;
  }

  @media screen and (min-width:588px) {
    .nav-links {
      display: flex;
    }
  }

  @media screen and (min-width: 768px) {
    .nav-links a {
      display: inline-block;
      padding: 15px 20px;
    }
  }
</style>
