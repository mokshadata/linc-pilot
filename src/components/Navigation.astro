---
import NavigationItem from "./NavigationItem.astro";

const base_url = import.meta.env.BASE_URL;
---

<ul class="nav-links">
  <NavigationItem href={`${base_url}/get-started/`}>How Does It Work</NavigationItem>
  <NavigationItem href={`${base_url}/about/`}>About Fort Bend LINC</NavigationItem>
  <NavigationItem href={`${base_url}/faqs/`}>FAQs</NavigationItem>
</ul>

<style>
  .nav-links {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    justify-content: space-between;
  }

  @media screen and (min-width: 768px) {
    .nav-links {
      display: flex;
      flex-direction: row;
    }

    .nav-links a {
      display: inline-block;
      padding: 15px 20px;
    }
  }
</style>
