---
const { GA_ID, fixedURL } = Astro.props
---

<!-- Google tag (gtag.js) -->
<script is:inline async type="text/javascript" src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`}></script>

<script is:inline type="text/javascript" define:vars={{ GA_ID, fixedURL }}>
    window.dataLayer = window.dataLayer || [];
    window.gtag = function gtag() {
        dataLayer.push(arguments);
    }
    gtag("js", new Date());

    gtag("consent", "default", {
        ad_storage: "denied",
        ad_user_data: "denied",
        ad_personalization: "denied",
    });

    gtag("config", GA_ID, {
        send_page_view: false,
    });

    document.addEventListener("astro:page-load", (pageLoadEvent) => {
        const page_location = fixedURL && `${pageLoadEvent.target.location.href}${fixedURL}/` || pageLoadEvent.target.URL
        gtag("event", "page_view", {
            page_location,
            page_title: pageLoadEvent.target.title,
        })
    })
    
</script>