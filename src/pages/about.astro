---
import BaseLayout from "@layouts/BaseLayout.astro";
import GetStarted from "@components/GetStarted.astro";

const pageTitle: string = "LINC: Get help for rent in Fort Bend!";
import { getEntry } from "astro:content";

const aboutSection = await getEntry('parts', '04-about')
const aboutSectionWithContent = {
  ...aboutSection,
  ...await aboutSection?.render(),
}

---

<BaseLayout pageTitle={pageTitle}>
  <main data-page="index">
    <section class="title-section">
      <div class="container">
        <div class="grid">
          <div class="content intro">
            <h1>{aboutSectionWithContent.data?.headline}</h1>
          </div>
        </div>
      </div>
    </section>
    <section class="about">
      <div class="container">
        <aboutSectionWithContent.Content/>
      </div>
    </section>
    <GetStarted/>
  </main>
</BaseLayout>

<style>
.about :global(img) {
  display: block;
  padding-bottom: 3rem;
  margin: auto;
}

.emphasis {
  font-weight: 800;
  font-style: italic;
}

.about {
  padding: 4rem 0;
}
</style>